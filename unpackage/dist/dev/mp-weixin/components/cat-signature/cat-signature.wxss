.cat-signature.visible {
  visibility: visible;
}
.cat-signature {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  overflow: hidden;
  height: 100vh;
  visibility: hidden;
}
.cat-signature .text {
  width: 340rpx;
  height: 85rpx;
  position: absolute;
  top: 300rpx;
  left: 222rpx;
}
.cat-signature .switch {
  position: absolute;
  top: 390rpx;
  left: 282rpx;
}
.cat-signature .mask {
  display: block;
  opacity: 0;
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: #FFFFFF;
}
.cat-signature .content {
  position: absolute;
